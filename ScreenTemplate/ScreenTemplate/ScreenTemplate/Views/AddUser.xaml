<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScreenTemplate.Views.AddUser"
             xmlns:local="clr-namespace:ScreenTemplate.ViewModels"
             BackgroundColor="#d7e8fa">
    <ContentPage.Content>
        
        <StackLayout Margin="30,0,30,0">
            <Image Margin="0,70,0,20"  Grid.Row="0" Source="belports.png"
               HorizontalOptions="Center"
               WidthRequest="250"
                    />
            <Entry TextColor="gray"
                   PlaceholderColor="gray"
                   BackgroundColor="Transparent"
                Placeholder="Email"
                   Text="{Binding Email}"
                   x:Name="emailEntry"/>
            
            <Entry TextColor="gray"
                   PlaceholderColor="gray"
                     Text="{Binding Password}"
                   BackgroundColor="Transparent" 
                Placeholder="Password"
                   x:Name="passwordEntry"/>

            <Button Text="Save"
                     BackgroundColor="#123261" 
                    CornerRadius="10"
                    BorderWidth="2"
                    FontSize="18"
                    CharacterSpacing="1"
                    Command="{Binding SaveCommand}"/>

            <CollectionView x:Name="myCollectionView"
                Margin="0,20,0,0"
                SelectionMode="Single"
                ItemsSource="{Binding Users}"
             >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView >
                            
                            <SwipeView.RightItems>
                                <SwipeItems >
                                    <SwipeItem
                            Text="Edit"
                            BackgroundColor="#123261"
                            CommandParameter="{Binding .}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:AddUserViewModel}}, Path=EditCommand}"
                            />
                                    <SwipeItem
                            Text="Delete"
                            BackgroundColor="#123261"
                            CommandParameter="{Binding .}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:AddUserViewModel}}, Path=DeleteCommand}"
                            />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Grid BackgroundColor="#d7e8fa"
                                  RowSpacing="-40">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Grid.Row="1"
                                       Text="Email:"
                                    FontAttributes="Bold"
                                    TextColor="#123261"
                                    FontSize="18"
                                    />

                                <Label Text="{Binding Email}" FontSize="16"
                                       Margin="0,30,0,0"
                                       Grid.Column="0" Grid.Row="1"
                                           FontAttributes="Bold"
                                           TextColor="black"/>

                                <Label 
                                     Grid.Column="0" Grid.Row="1"
                                    HorizontalOptions="End"
                                Text="Password:"
                                    FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="#123261"
                                   />
                                <Label Text="{Binding Password}" FontSize="15"
                                        Grid.Column="0" Grid.Row="1"
                                        Margin="0,30,10,0"
                                       HorizontalOptions="End"
                                           FontAttributes="Bold"
                                           TextColor="Black" />

                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

